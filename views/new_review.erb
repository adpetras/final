<div class="row">
    <div class="col-md-12">
        <h2>Add a review for <%= @space[:name] %></h2>
    </div>
</div>

<div class="row mt-5">
    <div class="col-md-12">
        <form action="/spaces/<%= @space[:id] %>/reviews/create" method="post">
            <div class="form-group">
                <label>Your overall rating (5 is best, 1 is worst)</label>
                <select class="form-control" name="rating">
                <option>5</option>
                <option>4</option>
                <option>3</option>
                <option>2</option>
                <option>1</option>
                </select>
            </div>
            <div class="form-group">
                <label>Your comments</label>
                <textarea class="form-control" name="comments" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit review</button>
        </form>
    </div>
</div>